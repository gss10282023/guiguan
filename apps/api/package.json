{
  "name": "@guiguan/api",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm exec dotenv -e ../../.env -- tsx watch src/index.ts",
    "worker:dev": "pnpm exec dotenv -e ../../.env -- tsx src/worker.ts",
    "worker": "node dist/worker.js",
    "job:complete-ended-sessions": "pnpm exec dotenv -e ../../.env -- tsx src/worker.ts --once",
    "build": "pnpm exec tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "db:migrate": "pnpm exec dotenv -e ../../.env -- prisma migrate deploy",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:dev": "pnpm exec dotenv -e ../../.env -- prisma migrate dev",
    "db:seed": "pnpm exec dotenv -e ../../.env -- prisma generate && pnpm exec dotenv -e ../../.env -- prisma db seed",
    "db:studio": "pnpm exec dotenv -e ../../.env -- prisma studio",
    "lint": "pnpm exec eslint . --max-warnings=0",
    "typecheck": "pnpm exec tsc -p tsconfig.json --noEmit",
    "test": "pnpm run db:migrate && pnpm exec dotenv -e ../../.env -- vitest run"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@fastify/cookie": "^9.4.0",
    "@fastify/jwt": "^8.0.1",
    "@fastify/rate-limit": "^9.1.0",
    "bcryptjs": "^2.4.3",
    "fastify": "^4.29.0",
    "fastify-plugin": "^4.5.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/supertest": "^6.0.3",
    "dotenv-cli": "^8.0.0",
    "prisma": "^5.22.0",
    "supertest": "^7.1.4",
    "vitest": "^2.1.8"
  },
  "prisma": {
    "seed": "pnpm exec tsx prisma/seed.ts"
  }
}
